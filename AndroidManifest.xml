<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.adrup.saldo" android:versionCode="3" android:versionName="0.2.1">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="false">
		<activity android:name=".Saldo" android:launchMode="singleTop"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".SettingsActivity" android:label="@string/app_name">
		</activity>
		<activity android:name=".BankLoginEditActivity">
		</activity>
		<activity android:name=".widget.WidgetConfigurationActivity"
			android:theme="@android:style/Theme.Dialog">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>
		<service android:name=".widget.WidgetUpdateService" />
		<service android:name="AutoUpdateService" />

		<!-- Broadcast Receiver that will process AppWidget updates -->
		<receiver android:name=".widget.SaldoWidgetProvider"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
				<action android:name="com.adrup.saldo.WIDGET_REFRESH" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/saldo_appwidget_info" />
		</receiver>
		<receiver android:name="AutoUpdateReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED"></action>
				<action android:name="com.adrup.saldo.AUTO_UPDATE"></action>
			</intent-filter>
		</receiver>


	</application>
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

</manifest> 